{
  options: [
    {
      includeToken: "canvas:shadow_debug",
      categoryKey: "config.canvas.category.debug",
      options: {
        shadow_debug: {
          default: false,
          nameKey: "config.canvas.value.shadow_debug",
          descriptionKey: "config.canvas.help.shadow_debug"
        }
      }
    }
  ],

  skyShadows: {
		framebuffer: "shadow",
		allowEntities: true,
		allowParticles: true,
		supportForwardRender: true,
		vertexShader: "canvas:shaders/pipeline/shadow.vert",
		fragmentShader: "canvas:shaders/pipeline/shadow.frag",
    // first parameter to glPolygonOffset - variable slope factor
    offsetSlopeFactor: 1.1,
    // second parameter to glPolygonOffset - constant offset bias
    offsetBiasUnits: 4.0
  },

  images: [
    // depth attachment for shadow map - must be an array texture
    {
      name: "shadow_depth",
      size: 1024,
      depth: 4,
      internalFormat: "DEPTH_COMPONENT32",
      pixelFormat: "DEPTH_COMPONENT",
      pixelDataType: "FLOAT",
      target: "TEXTURE_2D_ARRAY",
      texParams: [
        {name: "TEXTURE_MIN_FILTER", val: "NEAREST"},
        {name: "TEXTURE_MAG_FILTER", val: "NEAREST"},
        {name: "TEXTURE_WRAP_S", val: "CLAMP"},
        {name: "TEXTURE_WRAP_T", val: "CLAMP"},
        {name: "TEXTURE_COMPARE_MODE", val: "NONE"}
      ]
    }
  ],

  framebuffers: [
    {
			name: "shadow",
			depthAttachment: {image: "shadow_depth", clearDepth: 1.0}
		}
	]
}
